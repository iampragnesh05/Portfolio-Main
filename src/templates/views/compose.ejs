    />
  </head>
  <body>
    <section class="section">
        <%- include('partials/navbar'); -%>
        <h1>Compose</h1>
        
        <form action="/compose" method="POST" class="mt-5 mb-5">
            <div class="form-group field">
            <label class="label">Title</label>
            <input type="text" name="postTitle" class="form-control input">
            <label>Post</label>
            <textarea class="form-control textarea" name="postBody" rows="6"></textarea>
        </div>
            <button type="submit" class="button btn btn-primary">Publish</button>
        </form>
        
        <%- include('partials/footer'); -%>
    </section>
  </body>
